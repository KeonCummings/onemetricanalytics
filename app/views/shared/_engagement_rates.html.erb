<script>
  var g = new JustGage({
    id: "week",
     <% @metrics = combine_hash(metrics_history(params[:id], 'page_posts_impressions', 14),
                                 metrics_history(params[:id], 'page_engaged_users', 14)) %>
     <% @metrics = FacebookInsight.get_engagement_rates(@metrics)%>
    value: <%= score(@metrics) %>,
    min: 0,
    max: 120,
    titleFontColor : 'black',
    valueFontColor : '#EE7600',
    levelColors : ['#CC3232', '#FFFF00', '#859C27', '#7FFF00'],
    levelColorsGradient : false,
    title: "Impressions ",
    label: "Last 7 Days"
  });
</script>
